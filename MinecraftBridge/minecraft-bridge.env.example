# Server Configuration
PORT=3001
NODE_ENV=development # Can be 'production', 'development', 'test'
CLIENT_URL=http://localhost:3000 # URL of your web frontend. Use '*' for permissive CORS during development if needed.
LOG_LEVEL=info # Logging level: 'error', 'warn', 'info', 'http', 'verbose', 'debug', 'silly'

# WebSocket Authentication & Security
JWT_SECRET=YOUR_VERY_STRONG_AND_SECRET_JWT_KEY_PLEASE_CHANGE_ME # Used to sign and verify JWTs for web clients
MINECRAFT_API_KEY=YOUR_SECRET_API_KEY_FOR_MINECRAFT_ADDON_PLEASE_CHANGE_ME # API key for authenticating the Minecraft Bedrock Addon

# Discord OAuth2 Configuration (for linking Minecraft accounts to Discord users)
# These will be used by the DiscordService and auth routes later.
# DISCORD_CLIENT_ID=YOUR_DISCORD_APPLICATION_CLIENT_ID
# DISCORD_CLIENT_SECRET=YOUR_DISCORD_APPLICATION_CLIENT_SECRET
# DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN # Needed if the bridge performs bot actions (e.g., sending messages)
# DISCORD_REDIRECT_URI=http://localhost:3001/api/auth/discord/callback # Your OAuth2 redirect URI registered with Discord
# CHAT_RELAY_DISCORD_CHANNEL_ID=YOUR_DISCORD_CHANNEL_ID_FOR_MC_CHAT_RELAY # Channel where Minecraft chat gets posted

# Database (Example for MongoDB - uncomment and configure if you add a DB)
# MONGODB_URI=mongodb://localhost:27017/nimbus8_minecraft_bridge
